class Solution {
    public boolean solution(int x) {
        String str = String.valueOf(x); // x를 문자열로 변환
        int total = 0;
        
        for (int i = 0; i < str.length(); i++) {
            total += Character.getNumericValue(str.charAt(i)); // 각 자릿수를 정수로 변환하여 total에 저장
        }
        
        return x % total == 0; // 나눠떨어지냐?
    }
}
